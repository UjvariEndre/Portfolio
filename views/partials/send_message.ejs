<div class="row">
  <div class="col-lg-6 col-md-12" style="display: flex;">
    <div class="blue-card separate-lines" style="flex: 1;">
      <h1>Send me a <span style="color:#161a34;">message</span>!</h1>
      <h4 style="margin-top:10%;">Have questions?</h4>
      <h4>Have a proposal?</h4>
      <h4>Want a small modification?</h4>
      <h4>Please contact me.</h4>
    </div>
  </div>
  <div class="col-lg-6 col-md-12" style="display: flex;">
    <div class="white-card" style="flex: 1;">
      <!-- action="/" method="post" -->
      <form id="message_form" action="/" method="post">
        <input type="hidden" id="output" name="output" value="" />
        <div data-id="name" class="form-row">
          <label for="name" class="form-label">Your Name</label>
          <input id="name" class="form-control" placeholder="Enter your name" type="text" name="name" required="required">
        </div>
        <div data-id="email" class="form-row">
          <label for="email" class="form-label">Email Address</label>
          <input id="email" class="form-control" placeholder="Enter your email address" type="email" name="email" required="required">
        </div>
        <div data-id="message" class="form-row">
          <label for="message" class="form-label">Your Message</label>
          <textarea placeholder="Hi Endre, we need a website for our company. When can we talk about the details?" class="form-control" name="message" rows="7" cols="30" required></textarea>
        </div>
        <div class="form-row">
          <button class="dark-button dark-button-anim" type="submit">Send</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- reCAPTCHA -->
<script>
  window.addEventListener("submit", e => {
    e.preventDefault();
    grecaptcha.ready(function() {
      grecaptcha.execute('6Lf4bG8jAAAAAE_BXxHe5zXRmMBHpKs2FEOLZUtu', {action: 'submit'}).then(function(token) {
          // Add your logic to submit to your backend server here.
          var output = document.getElementById("output");
          output.value = token;
          document.getElementById("message_form").submit();
      });
    });
  });
</script>

<!-- Animation -->
<script type="text/javascript">
  const darkButton = document.querySelector(".dark-button-anim");

  const darkAnimMouseOver = () => {
    anime({
      targets: darkButton,
      width: "60%",
      scale: {
        value: 1.1
      },
      duration: 800,
      backgroundColor: "#00e5a6",
      color: "#161a34",
      fontWeight: 900,
      boxShadow: "10px 10px 5px grey"
    })
  }

  const darkAnimMouseOut = () => {
    anime({
      targets: darkButton,
      width: "50%",
      scale: {
        value: 1
      },
      duration: 800,
      backgroundColor: "#161a34",
      color: "#fefdff",
      fontWeight: 700,
      boxShadow: "0px 0px black"
    })
  }

  darkButton.addEventListener("mouseover", darkAnimMouseOver);
  darkButton.addEventListener("mouseout", darkAnimMouseOut);
</script>
